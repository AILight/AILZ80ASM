	org $8000
	ld a, 0
	GREEN_ADDR equ $C000
	GREEN_PTN_DEF  equ 0000_1111b
	GREEN_A equ 0000_0001b
	GREEN_B equ 0000_0010b
	GREEN_C equ 0000_0100b
	PORT_A equ $CC
	.SET_DATA equ $01
	TEST_ADDR1 equ  FFEEH
	TEST_ADDR2 equ 0FFEEH

	LD HL, GREEN_ADDR
	LD DE, $
	LD A, GREEN_PTN_DEF
	LD A, GREEN_A | GREEN_B | GREEN_C
	LD B, GREEN_ADDR.@H
	LD C, GREEN_ADDR.@L
	LD A, PORT_A.SET_DATA
	OUT (PORT_A), A
	LD HL, TEST_ADDR1
	LD HL, TEST_ADDR2

	